apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: ubuntu-vm
spec:
  running: false
  template:
    metadata:
      labels:
        kubevirt.io/vm: ubuntu-vm
    spec:
      domain:
        devices:
          disks:
            - disk:
              bus: virtio
              name: rootfs
            - disk:
              bus: virtio
              name: cloudinit
          interfaces:
            - name: default
          masquerade: {}
          resources:
            requests:
              memory: 64M
      networks:
        - name: default
          pod: {}
      volumes:
        - name: rootfs
          containerDisk:
            image: kubevirt/ubuntu-cloud-init
        - name: cloudinit
          cloudInitNoCloud:
            userDataBase64: SGkuXG4=